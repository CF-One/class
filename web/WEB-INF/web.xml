<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--老师学生登录-->
    <servlet>
        <servlet-name>studentLoginServlet</servlet-name>
        <servlet-class>servlet.studentLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentLoginServlet</servlet-name>
        <url-pattern>/servlet/studentLoginServlet</url-pattern>
    </servlet-mapping>
    <!--学生注册-->
    <servlet>
        <servlet-name>studentRegisterServlet</servlet-name>
        <servlet-class>servlet.studentRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentRegisterServlet</servlet-name>
        <url-pattern>/servlet/studentRegisterServlet</url-pattern>
    </servlet-mapping>
    <!--教师注册-->
    <servlet>
        <servlet-name>teacherRegisterServlet</servlet-name>
        <servlet-class>servlet.teacherRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherRegisterServlet</servlet-name>
        <url-pattern>/servlet/teacherRegisterServlet</url-pattern>
    </servlet-mapping>
    <!--忘记密码-->
    <servlet>
        <servlet-name>forgetPassWordServlet</servlet-name>
        <servlet-class>servlet.forgetPassWordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>forgetPassWordServlet</servlet-name>
        <url-pattern>/servlet/forgetPassWordServlet</url-pattern>
    </servlet-mapping>
    <!--修改密码-->
    <servlet>
        <servlet-name>updatePassWordServlet</servlet-name>
        <servlet-class>servlet.updatePassWordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updatePassWordServlet</servlet-name>
        <url-pattern>/servlet/updatePassWordServlet</url-pattern>
    </servlet-mapping>
    <!--老师创建课程-->
    <servlet>
        <servlet-name>teacherCreateCourseServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.teacherCreateCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherCreateCourseServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/teacherCreateCourseServlet</url-pattern>
    </servlet-mapping>
    <!--老师加入课程-->
    <servlet>
        <servlet-name>teacherAddCourseServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.teacherAddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherAddCourseServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/teacherAddCourseServlet</url-pattern>
    </servlet-mapping>
    <!--老师删除创建的课程-->
    <servlet>
        <servlet-name>teacherDeleteCreateCourseServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.teacherDeleteCreateCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherDeleteCreateCourseServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/teacherDeleteCreateCourseServlet</url-pattern>
    </servlet-mapping>
    <!--老师删除加入的课程-->
    <servlet>
        <servlet-name>teacherDeleteAddCourseServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.teacherDeleteAddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherDeleteAddCourseServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/teacherDeleteAddCourseServlet</url-pattern>
    </servlet-mapping>
    <!--老师修改自己创建的课程-->
    <servlet>
        <servlet-name>updateCreateCourseServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.updateCreateCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateCreateCourseServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/updateCreateCourseServlet</url-pattern>
    </servlet-mapping>
    <!--老师创建课程作业-->
    <servlet>
        <servlet-name>teacherCreateCourseTaskServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.task.teacherCreateCourseTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherCreateCourseTaskServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/task/teacherCreateCourseTaskServlet</url-pattern>
    </servlet-mapping>
    <!--老师归档课程-归档自己+归档全部-->
    <servlet>
        <servlet-name>fileOwnCourseServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.file.fileOwnCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileOwnCourseServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/file/fileOwnCourseServlet</url-pattern>
    </servlet-mapping>
    <!--老师归档课程-归档自己-->
    <servlet>
        <servlet-name>recoverFileCourseServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.file.recoverFileCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>recoverFileCourseServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/file/recoverFileCourseServlet</url-pattern>
    </servlet-mapping>
    <!--学生加入课程-->
    <servlet>
        <servlet-name>studentAddCourseServlet</servlet-name>
        <servlet-class>servlet.studentServlet.studentAddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentAddCourseServlet</servlet-name>
        <url-pattern>/servlet/studentServlet/studentAddCourseServlet</url-pattern>
    </servlet-mapping>
    <!--学生恢复归档课程课程-->
    <servlet>
        <servlet-name>studentRecoverFileCourseServlet</servlet-name>
        <servlet-class>servlet.studentServlet.recoverFileCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentRecoverFileCourseServlet</servlet-name>
        <url-pattern>/servlet/studentServlet/recoverFileCourseServlet</url-pattern>
    </servlet-mapping>
    <!--学生删除课程-->
    <servlet>
        <servlet-name>studentDeleteCourseServlet</servlet-name>
        <servlet-class>servlet.studentServlet.studentDeleteCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentDeleteCourseServlet</servlet-name>
        <url-pattern>/servlet/studentServlet/studentDeleteCourseServlet</url-pattern>
    </servlet-mapping>
    <!--学生归档课程-->
    <servlet>
        <servlet-name>fileCourseServlet</servlet-name>
        <servlet-class>servlet.studentServlet.fileCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileCourseServlet</servlet-name>
        <url-pattern>/servlet/studentServlet/fileCourseServlet</url-pattern>
    </servlet-mapping>
    <!--老师修改学生成绩-->
    <servlet>
        <servlet-name>updateStudentResultServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.task.updateStudentResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateStudentResultServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/task/updateStudentResultServlet</url-pattern>
    </servlet-mapping>
    <!--老师在发布作业时，在成绩表中插入一条记录-->
    <servlet>
        <servlet-name>teacherAddResultServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.task.teacherAddResultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherAddResultServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/task/teacherAddResultServlet</url-pattern>
    </servlet-mapping>
    <!--老师催交作业-->
    <servlet>
        <servlet-name>teacherCallTaskServlet</servlet-name>
        <servlet-class>servlet.teacherServlet.task.teacherCallTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherCallTaskServlet</servlet-name>
        <url-pattern>/servlet/teacherServlet/task/teacherCallTaskServlet</url-pattern>
    </servlet-mapping>
    <!--学生提交作业-->
    <servlet>
        <servlet-name>studentProvideTaskServlet</servlet-name>
        <servlet-class>servlet.studentServlet.studentProvideTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentProvideTaskServlet</servlet-name>
        <url-pattern>/servlet/studentServlet/studentProvideTaskServlet</url-pattern>
    </servlet-mapping>
</web-app>
